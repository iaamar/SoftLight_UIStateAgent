# ============================================
# Agent B - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Backend Configuration
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true
API_V1_PREFIX=/api/v1

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MCP_URL=http://localhost:8001
NODE_ENV=development

# ============================================
# MCP Server Configuration
# ============================================
MCP_HOST=0.0.0.0
MCP_PORT=8001
MCP_CONTEXT_STORAGE_TYPE=upstash

# ============================================
# Upstash Configuration (for context sync)
# ============================================
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=
UPSTASH_REST_URL=
UPSTASH_REST_TOKEN=

# ============================================
# Playwright Configuration
# ============================================
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_VIEWPORT_WIDTH=1920
PLAYWRIGHT_VIEWPORT_HEIGHT=1080
PLAYWRIGHT_SCREENSHOT_QUALITY=90

# ============================================
# CrewAI Configuration
# ============================================
CREWAI_LLM_MODEL=gpt-4
CREWAI_TEMPERATURE=0.7
CREWAI_MAX_ITERATIONS=10
CREWAI_VERBOSE=true

# ============================================
# LangGraph Configuration
# ============================================
LANGGRAPH_DEBUG=false
LANGGRAPH_MAX_STEPS=50
LANGGRAPH_RETRY_ATTEMPTS=3

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=./data/logs
LOG_FILE_PREFIX=agent-run
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10

# ============================================
# Screenshot Configuration
# ============================================
SCREENSHOT_DIR=./data/screenshots
SCREENSHOT_FORMAT=png
SCREENSHOT_FULL_PAGE=true

# ============================================
# Agent Configuration
# ============================================
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=300
AGENT_PARALLEL_EXECUTION=false

# ============================================
# OpenAI / LLM API Keys
# ============================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ============================================
# Application URLs (for testing)
# ============================================
NOTION_URL=https://www.notion.so
LINEAR_URL=https://linear.app
ASANA_URL=https://app.asana.com
